<div class="container">
  <h1>Selamat Datang Di Halaman Data Siswa</h1>
  <a href="/siswa/add" class="btn btn-primary mb-2">Daftar Siswa</a>

  <% if (msg.length !== 0) { %>
  <div class="alert alert-success" role="alert"><%= msg %></div>
  <% } %>

  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nama Siswa</th>
        <th scope="col">Nomer Hp</th>
        <th scope="col">Email</th>
        <th scope="col">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% students.forEach((siswa,i) => {i++ %>
      <tr>
        <th scope="row"><%= i++ %></th>
        <td><%= siswa.nama %></td>
        <td><%= siswa.noHp %></td>
        <td><%= siswa.email %></td>
        <td>
          <a href="/siswa/edit/<%= siswa.nama %>" class="btn btn-warning me-2">Edit</a>
          <a href="/siswa/delete/<%= siswa.nama %>" class="btn btn-danger" onclick="return confirm('Anda yakin akan menghapus siswa <%= siswa.nama %> ?')">Delete</a>
        </td>
      </tr>

      <% }) %>
    </tbody>
  </table>
</div>
