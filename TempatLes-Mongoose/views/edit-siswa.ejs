<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="header-form">
        <h2>Form Tambah Siswa Lemon</h2>
      </div>

      <!-- warning ketika ada data yang sama -->
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/siswa?_method=PUT">
        <input type="hidden" name="id" value="<%= student._id %>" />
        <input type="hidden" name="namaLama" value="<%= (student.namaLama) ? student.namaLama : student.nama %>" />

        <div class="mb-3">
          <label for="nama" class="form-label">Nama: </label>
          <input type="text" class="form-control" id="nama" required name="nama" placeholder="Joko" value="<%= student.nama %>" />
        </div>
        <div class="mb-3">
          <label for="umur" class="form-label">Umur: </label>
          <input type="text" class="form-control" id="umur" required name="umur" placeholder="17 ?" value="<%= student.umur %>" />
        </div>
        <div class="mb-3">
          <label for="hobi" class="form-label">hobi: </label>
          <input type="text" class="form-control" id="hobi" required name="hobi" placeholder="Membaca ?" value="<%= student.hobi %>" />
        </div>
        <div class="mb-3">
          <label for="asalSekolah" class="form-label">Asal Sekolah: </label>
          <input type="text" class="form-control" id="asalSekolah" required name="sekolah" placeholder="SMA ..." value="<%= student.sekolah%>" />
        </div>
        <div class="mb-3">
          <label for="noHp" class="form-label">Nomer Hp: </label>
          <input type="number" class="form-control" id="noHp" required name="noHp" placeholder="08..." value="<%= student.noHp %>" />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email: </label>
          <input type="email" class="form-control" id="email" required name="email" placeholder="email@..." value="<%= student.email %>" />
        </div>
        <div class="mb-3">
          <label for="alasanLes" class="form-label">Alasan Les Di Lemon: </label>
          <textarea name="alasanLes" id="alasanLes" cols="30" rows="5" class="form-control" placeholder="Ingin menguasai bahasa inggris dengan fasih"><%= student.alasanLes %></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
